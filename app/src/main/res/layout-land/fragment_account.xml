<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!-- TODO 2A. ADD FRAGMENT TO TO LAYOUT FILE -->
            <fragment android:name="com.example.guestapp.ListFragment"
                android:id="@+id/list"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Hello, stranger!"
                    android:layout_centerInParent="true"
                    android:id="@+id/welcome"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="You haven't checked in yet, please use your code in the Check-In Page"
                    android:layout_centerInParent="true"
                    android:id="@+id/welcomeinfo"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView" />
            </fragment>
            <!-- END -->

            <!-- TODO 2B. ADD FRAGMENT TO TO LAYOUT FILE -->
            <fragment android:name="com.example.guestapp.DetailFragment"
                android:id="@+id/detail"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>

            <!-- END -->

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>